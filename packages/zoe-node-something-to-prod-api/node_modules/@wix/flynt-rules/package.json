{
  "name": "@wix/flynt-rules",
  "version": "1.0.457",
  "description": "protobuf linter",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "author": "Eyal Post <eyalp@wix.com>",
  "license": "ISC",
  "scripts": {
    "clean": "rm -rf ./dist ./catalog/gen-index.ts",
    "prebuild": "yarn run clean && yarn run gen-index && yarn run gen-json-index",
    "build:ts": "tsc -p tsconfig.build.json",
    "precompile": "yarn run prebuild",
    "compile": "tsc",
    "build": "yarn run build:ts",
    "postbuild": "yarn run copy-catalog-resources",
    "copy-catalog-resources": "find ./catalog -name '*.md' -exec cp \\{\\} ./dist/\\{\\} \\; && cp ./catalog/*.json ./dist/catalog",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "yarn run run-tests && yarn run lint:fix",
    "run-tests": "jest",
    "test:rules-dev": "yarn clean && jest --testMatch=**/test-changed-rules.ts",
    "pretest:rules": "yarn clean",
    "test:rules": "jest --runTestsByPath ./test/catalog.spec.ts",
    "posttest:rules": "yarn run docs",
    "docs": "ts-node -T ../engine/scripts/build-docs.ts ./catalog",
    "check-docs": "echo \"\n\n\n*** IF THIS SCRIPT FAILS THEN DOCS ARE OUTDATED. PLEASE RUN yarn gen docs ***\n\n\n\"  && yarn run docs && git diff --exit-code -U0 --word-diff=porcelain README.md",
    "gen-index": "ts-node -T ../engine/scripts/build-catalog-loader.ts ./catalog",
    "gen-json-index": "ts-node -T scripts/gen-index-json.ts ./catalog ./catalog/rule-index.json"
  },
  "dependencies": {
    "@wix/flynt-engine": "1.0.278",
    "@wix/greyhound-legacy-topics": "^1.29.0",
    "@wix/wix-protos": "1.0.95"
  },
  "devDependencies": {},
  "wix": {
    "artifact": {
      "groupId": "com.wixpress.npm",
      "artifactId": "flynt-rules"
    },
    "validations": {
      "postDependenciesBuild": [
        "check-docs"
      ],
      "postBuild": [
        "run-tests",
        "lint"
      ]
    }
  },
  "publishConfig": {
    "registry": "http://npm.dev.wixpress.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wix-private/flynt.git",
    "directory": "packages/rules"
  }
}