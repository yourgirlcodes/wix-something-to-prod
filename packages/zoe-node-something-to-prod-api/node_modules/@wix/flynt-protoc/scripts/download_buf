#!/bin/bash
if [ -z "$1" ]
  then
    echo "No argument supplied"
    exit 1
fi

curl -L https://github.com/protocolbuffers/protobuf/releases/download/v$1/protoc-$1-osx-x86_64.zip --output protoc-osx.zip
unzip -p protoc-osx.zip bin/protoc > ../lib/bin/protoc-darwin-x86
chmod +x ../lib/bin/protoc-darwin-x86
rm protoc-osx.zip

curl -L https://github.com/protocolbuffers/protobuf/releases/download/v$1/protoc-$1-linux-x86_64.zip --output protoc-linux.zip
unzip -p protoc-linux.zip bin/protoc > ../lib/bin/protoc-linux-x86
chmod +x ../lib/bin/protoc-linux-x86
rm protoc-linux.zip
